{
  "name": "sos-tourist-doctor-api",
  "version": "1.0.0",
  "description": "Backend API for SOS Tourist Doctor",
  "main": "src/index.js",
  "keywords": [
    "telemedicine",
    "sos",
    "tourist",
    "doctor"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prod": "cross-env NODE_ENV=production node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "clean": "npm prune --production",
    "postinstall": "node scripts/deployment/postinstall.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t sos-tourist-doctor-api .",
    "docker:run": "docker run -d --name sos-tourist-doctor-api --env-file .env -p 3000:3000 sos-tourist-doctor-api",
    "preprod": "node scripts/deployment/prepare-for-production.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "@vonage/server-sdk": "^3.22.1",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "getstream": "^8.8.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "socket.io": "^4.7.2",
    "stream-chat": "^8.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.23.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "bcryptjs": "^2.4.3",
    "http-status": "^2.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "typescript": "^5.1.6"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^config/(.*)$": "<rootDir>/src/config/$1",
      "^middlewares/(.*)$": "<rootDir>/src/middlewares/$1",
      "^services/(.*)$": "<rootDir>/src/services/$1",
      "^utils/(.*)$": "<rootDir>/src/utils/$1",
      "^validations/(.*)$": "<rootDir>/src/validations/$1",
      "^db/(.*)$": "<rootDir>/src/db/$1",
      "^services$": "<rootDir>/src/services/index.js",
      "^config$": "<rootDir>/src/config/config.js",
      "^app$": "<rootDir>/src/app.js"
    }
  }
}